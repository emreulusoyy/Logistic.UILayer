
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h2>Kategori Ekleme SAyfası</h2>

<form method="post">
    <label>Kategori Adı</label>
    <input type="text" class="form-control" name="CategoryName" placeholder="Kategori Adı Giriniz."  required/>
    <br />
    <label>Kategori Durumu</label>
    <input type="text" class="form-control" name="CategoryStatus" placeholder="Durumu Giriniz." />
    <br />
    <button class="btn btn-info ">Kategoriyi Ekle </button>

</form>

