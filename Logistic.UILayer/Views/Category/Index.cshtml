@using Logistic.UILayer.Controllers
@model List<Logistic.UILayer.Models.TblCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td> <a href="" class="btn btn-danger">Sil</a></td>
            <td> <a href="" class="btn btn-info">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Category/AddCategory/" class="btn btn-primary"> Yeni Kategori Girişi</a>
